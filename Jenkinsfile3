pipeline {
    agent any
    environment {
        NEW_VERSION = "1.3.0"
        //SERVER_CREDENTIALS =credentials('server-credentials')
    }
    stages {
        stage('Welcome Step') {
            steps { 
                echo 'Welcome to JenkinsTest'
            }
        }
        stage('Building Step') {
            steps { 
                echo 'Building App'
                echo "Building version ${NEW_VERSION}"
            }
        }
        stage('Testing Step') {
            steps { 
                echo 'Testing App'
            }
        }
        stage('Deploying Step') {
            steps { 
                echo 'Deploy the App'
            }
        }
    }
}

