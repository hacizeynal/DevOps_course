pipeline {
    agent any
    stages {

        stage('Welcome Step') {
            steps { 
                echo 'Welcome to the JenkinsTest with Multiple Branches'
            }
        }
        stage('Testing Step') {

            steps { 
                echo 'Testing App for branch ${BRANCH_NAME}'
            }
        }
       
        stage('Building Step') {
            when {
                expression {
                    BRANCH_NAME =='main'
                }
            }
            steps { 
                echo 'Building App for branch ${BRANCH_NAME}'
            }
        }
        
        stage('Deploying Step') {
            when {
                expression {
                    BRANCH_NAME =='main'
                }
            }
            steps { 
                echo 'Deploy the App for branch ${BRANCH_NAME}'
            }
        }
    }
}
