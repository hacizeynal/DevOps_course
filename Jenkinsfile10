#!/usr/bin/env groovy

library identifier: 'jenkins-shared-library@master', retriever: modernSCM(
    [$class: 'GitSCMSource',
     remote: 'https://github.com/hacizeynal/DevOps-Jenkins-Shared-Library.git',
     credentialsId: 'jenkins-zhajili'
    ]
)

pipeline {
    agent any
    tools {
        maven 'Maven'
    }
    environment {
        IMAGE_NAME = 'nanajanashia/demo-app:java-maven-2.0'
    }
    stages {
        stage('build app') {
            steps {
               script {
                  echo 'building application jar...'
                  buildJarNana()
               }
            }
        }
        stage('build image') {
            steps {
                script {
                   echo 'building docker image...'
                   buildImageNana(env.IMAGE_NAME)
                   dockerLoginNana()
                   dockerPushNana(env.IMAGE_NAME)
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    def dockerCommands = "docker run -p 8080:8080 -d zhajili/my_aws_app:1.1"
                    echo 'Deploy the Application in AWS EC2'
                    sshagent(['ec2-aws']) {
                        sh "ssh -o StrictHostKeyChecking=no ec2-user@3.73.122.101 ${dockerCommands}"
                        }
                   }
                }
            }
        }
    }
}