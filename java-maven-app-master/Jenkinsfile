pipeline {
    agent any
    tools {
            maven "maven-3.6"}
    stages {
        stage('Welcome to Demo for Incrementing App') {
            steps {
                echo 'Welcome to Demo for Incrementing App'
            }
        }
        stage('Testing Step') {
            steps {
                echo 'Testing App'
            }
        }
        stage('Deploying Step') {
            steps {
                echo 'Deploy the App'
            }
        }
    }
}